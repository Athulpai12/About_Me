<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5ba08"
        android:id="@+id/toolbar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Achievement" />





    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/drawerLayout"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <ImageView
                android:background="@drawable/achievement"
                android:layout_width="587dp"
                android:layout_height="400dp"
                android:id="@+id/imageView6"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:textSize="30dp"
                android:layout_below="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Achievement"
                android:id="@+id/textView16" />
            <TextView
                android:textSize="30dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Have stood in the top 20 percentile of the class"
                android:id="@+id/textView19" />
            <TextView
                android:textSize="30dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Have been selected as the house captain in school"
                android:id="@+id/textView34" />
        </RelativeLayout>
        <android.support.design.widget.NavigationView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:id="@+id/shitstuff"
            app:itemTextColor="#000"
            app:menu="@menu/drawermenu"
            android:layout_marginTop="-24dp"
            />







    </android.support.v4.widget.DrawerLayout>

</LinearLayout>