<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5ba08"
        android:id="@+id/toolbar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="What Gorges Me in Android" />





    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/drawerLayout"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <ImageView
                android:background="@drawable/image"
                android:layout_width="587dp"
                android:layout_height="400dp"
                android:id="@+id/imageView6"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:textSize="30dp"
                android:layout_below="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="My Dream project is to build an Android app that authenticates people with the help of face recognition and Eliminate Passwords for good"
                android:id="@+id/textView16" />
            <TextView
                android:textSize="30dp"
                android:layout_below="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="This project can be implementes with the help of opencv and Android Studio . OpenCv provides a lot of libraries which can be used for face recognition"
                android:id="@+id/textView17" />
        </RelativeLayout>
        <android.support.design.widget.NavigationView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:id="@+id/shitstuff"
            app:itemTextColor="#000"
            app:menu="@menu/drawermenu"
            android:layout_marginTop="-24dp"
            />







    </android.support.v4.widget.DrawerLayout>

</LinearLayout>